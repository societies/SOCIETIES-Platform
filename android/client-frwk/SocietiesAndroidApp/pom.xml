<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.societies</groupId>
		<artifactId>android-parent</artifactId>
		<version>RELEASE</version>
	</parent>

	<groupId>org.societies.android.platform.gui</groupId>
	<artifactId>SocietiesAndroidApp</artifactId>
	<name>SocietiesAndroidClient</name>
	<version>${release.version}</version>
	<packaging>apk</packaging>

	<developers>
		<developer>
			<name>WP4 Client Framework Team</name>
			<!-- Name of component author -->
			<email>http://www.ict-societies.eu</email>
			<!-- Component author e-mail -->
		</developer>
	</developers>

	<dependencies>
		<dependency>
			<groupId>com.google.android</groupId>
			<artifactId>android</artifactId>
			<exclusions>
				<!-- Provided by Android -->
				<exclusion>
					<artifactId>xpp3</artifactId>
					<groupId>xpp3</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>com.phonegap</groupId>
			<artifactId>cordova</artifactId>
		</dependency>
		<dependency>
			<groupId>org.societies.android.api.internal</groupId>
			<artifactId>societies-android-api-internal</artifactId>
			<version>${release.version}</version>
			<type>apklib</type>
		</dependency>
		<dependency>
			<groupId>org.societies.comm.xmpp</groupId>
			<artifactId>CommunicationFrameworkCommons</artifactId>
			<version>${version.comm}</version>
			<type>apklib</type>
		</dependency>
		<dependency>
			<groupId>org.societies.android.platform.comms.helper</groupId>
			<artifactId>societies-android-comms-helper</artifactId>
			<version>${release.version}</version>
			<type>apklib</type>
		</dependency>
		<!-- 
		<dependency>
   			<groupId>org.societies.android.platform</groupId>
   			<artifactId>personalisation</artifactId>
			<version>${release.version}</version>
			<type>apklib</type>
		</dependency>
		 -->
		<dependency>
			<groupId>org.asmack</groupId>
			<artifactId>asmack</artifactId>
		</dependency>
		<dependency>
			<groupId>org.simpleframework</groupId>
			<artifactId>simple-xml</artifactId>
			<exclusions>
				<!-- StAX is not available on Android -->
				<exclusion>
					<artifactId>stax</artifactId>
					<groupId>stax</groupId>
				</exclusion>
				<exclusion>
					<artifactId>stax-api</artifactId>
					<groupId>stax</groupId>
				</exclusion>
				<!-- Provided by Android -->
				<exclusion>
					<artifactId>xpp3</artifactId>
					<groupId>xpp3</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		
		<dependency>
			<groupId>org.societies.android.platform.servicemonitor</groupId>
			<artifactId>SocietiesServiceMonitor</artifactId>
			<version>${release.version}</version>
			<type>apklib</type>
		</dependency>
		<dependency>
			<groupId>org.societies.android.platform.cssmanager</groupId>
			<artifactId>SocietiesCSSManager</artifactId>
			<version>${release.version}</version>
			<type>apklib</type>
		</dependency>
		<dependency>
			<groupId>org.societies.android.platform.devicestatus</groupId>
			<artifactId>LocalDeviceStatus</artifactId>
			<version>${release.version}</version>
			<type>apklib</type>
		</dependency>
		<dependency>
			<groupId>org.societies.android.platform.cis</groupId>
			<artifactId>CommunityManagerService</artifactId>
			<version>${release.version}</version>
			<type>apklib</type>
		</dependency>
		<dependency>
			<groupId>org.societies.android.platform</groupId>
			<artifactId>SocietiesAndroidSocialData</artifactId>
			<version>${release.version}</version>
			<type>apklib</type>
		</dependency>
		<dependency>
	        <groupId>org.societies.android.privacytrust.trust</groupId>
	        <artifactId>trust-client</artifactId>
			<version>${version.pt}</version>
			<type>apklib</type>
		</dependency>
		<dependency>
			<groupId>org.societies.android.platform.events</groupId>
			<artifactId>SocietiesPlatformEvents</artifactId>
			<version>${release.version}</version>
			<type>apklib</type>
		</dependency>
		<dependency>
			<groupId>org.societies.android.platform.css.friends</groupId>
   			<artifactId>FriendsManager</artifactId>
			<version>${release.version}</version>
			<type>apklib</type>
		</dependency>
		<dependency>
		   	<groupId>org.societies.android.platform.context</groupId>
   			<artifactId>SocietiesAndroidContext</artifactId>
			<version>${release.version}</version>
			<type>apklib</type>
		</dependency>
		<dependency>
			<groupId>com.google.code.gson</groupId>
			<artifactId>gson</artifactId>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<artifactId>xpp3</artifactId>
			<groupId>xpp3</groupId>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<build>
		<finalName>${project.artifactId}</finalName>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>com.jayway.maven.plugins.android.generation2</groupId>
				<artifactId>android-maven-plugin</artifactId>
				<configuration>
				    <dex>
				        <jvmArguments>
                            <argument>-Xms256m</argument>
                            <argument>-Xmx1024m</argument>
                        </jvmArguments>
				    </dex>
				</configuration>
			</plugin>
			<plugin>
				<groupId>nl.windgazer</groupId>
				<artifactId>jsdoctk-plugin</artifactId>
				<version>2.3.2</version>
				<executions>
					<execution>
						<phase>site</phase>
						<goals>
							<goal>jsdoc</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<!-- The generated documentation will be put on this directory -->
					<directory>${project.build.directory}/doc</directory>
					<!-- JS file(s) of this directory will be used to generate the documentation -->
					<srcDir>${basedir}/assets/www/javascript</srcDir>
					<recurse>5</recurse>
				</configuration>
			</plugin>
			<!--plugin>
      				<groupId>org.codehaus.mojo</groupId>
      				<artifactId>jslint-maven-plugin</artifactId>
      				<version>1.0.1</version>
      				<executions>
        				<execution>
          					<goals>
            						<goal>jslint</goal>
            						<goal>test-jslint</goal>
          					</goals>
        				</execution>
      				</executions>
    				<configuration>
					<sourceJsFolder>${basedir}/assets/www/javascript/pagespecific</sourceJsFolder>
				</configuration>
			</plugin-->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<configuration>
					<artifactItems>
						<artifactItem>
							<groupId>${project.groupId}</groupId>
							<artifactId>${project.artifactId}</artifactId>
							<version>${release.version}</version>
							<type>apk</type>
							<overWrite>true</overWrite>
							<outputDirectory>${spring.osgi.deploy.dir}/android</outputDirectory>
						</artifactItem>
					</artifactItems>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<reporting>
	    <plugins>
	      <plugin>
	        <groupId>org.codehaus.mojo</groupId>
	        <artifactId>findbugs-maven-plugin</artifactId>
	      </plugin>
	    </plugins>
	</reporting>
</project>
