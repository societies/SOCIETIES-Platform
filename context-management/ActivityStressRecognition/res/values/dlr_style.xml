<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="WindowTitleBackground">
	    <item name="android:background">@drawable/background</item>
	</style>
	<style name="CustomTitleTextAppearance">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#000000</item>
		<item name="android:textStyle">bold</item>
	</style>
 	<style name="title_bar">
		<item name="android:singleLine">false</item>
		<item name="android:textAppearance">@style/CustomTitleTextAppearance</item>
		<item name="android:shadowColor">#CCCCCC</item>
		<item name="android:shadowRadius">2.75</item>
	</style>
    <style name="DLRTheme" parent="android:Theme">
    	<item name="android:windowTitleStyle">@style/title_bar</item>
        <item name="android:windowTitleSize">35dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
    </style>
</resources>