<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.societies</groupId>
		<artifactId>spring-osgi-parent</artifactId>
		<version>0.1</version>
	</parent>
  
	<groupId>org.societies.comm</groupId>
	<artifactId>CommonLibraries</artifactId>
	<packaging>bundle</packaging>
	<version>${version.comm}</version>
	<description>XMPP Virgo Dependency Bundle</description>
	<name>Common Libraries for Communication Framework</name>

 	<properties>
        <slf4j.version>1.5.0</slf4j.version>
        <spring.maven.artifact.version>2.5.6.SEC01</spring.maven.artifact.version>
        <spring.osgi.version>1.2.1</spring.osgi.version>
        <equinox.ver>3.2.2</equinox.ver>
    </properties>
  
   <build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
    				<instructions>
    					<Bundle-Activator>org.societies.comm.common.CommonLibraryActivator</Bundle-Activator>
    					<Import-Package>
    						org.osgi.framework,
    						!com.sun.*,	
    						!org.gjt.*,!org.jaxen.*,!org.mortbay.*,
    						!org.relaxng.*,
    						org.slf4j*;version="1.5.8",
    						*
    					</Import-Package>
    					<Export-Package>
		           			org.xmpp.component,	           					           		
		           			org.xmpp.packet,
		           			org.xmpp.util,		           			
		           			org.jivesoftware.whack.*,
		           			org.jivesoftware.smack.*,
		           			org.dom4j.*
		           		</Export-Package>
		           		<Embed-Dependency>*;scope=compile|runtime</Embed-Dependency>
						<Embed-Transitive>true</Embed-Transitive>
		         	</instructions>
	       		</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<configuration>
	      			<artifactItems>
		         		<artifactItem>
		         			<groupId>${project.groupId}</groupId>
		         			<artifactId>${project.artifactId}</artifactId>
							<version>${version.comm}</version>
		           			<type>bundle</type>
		           			<overWrite>true</overWrite>
		           			<outputDirectory>${spring.osgi.deploy.dir}</outputDirectory>
		         		</artifactItem>
	      			</artifactItems> 			              			        			
	    		</configuration>
			</plugin>			
		</plugins>
	</build>
  
  <dependencies>
	<dependency>
		<groupId>org.igniterealtime</groupId>
		<artifactId>whack</artifactId>
	</dependency>
	<dependency>
  		<groupId>org.igniterealtime.smack</groupId>
  		<artifactId>smack</artifactId>
  	</dependency>
  	<dependency>
  		<groupId>org.igniterealtime.smack</groupId>
  		<artifactId>smackx</artifactId>
  	</dependency>
  	<dependency>
  		<groupId>org.igniterealtime.smack</groupId>
  		<artifactId>smackx-debug</artifactId>
  	</dependency>
  	<dependency>
  		<groupId>org.osgi</groupId>
  		<artifactId>org.osgi.core</artifactId>
  		<version>4.2.0</version>
  	</dependency>
  	<dependency>
		<groupId>org.slf4j</groupId>
		<artifactId>slf4j-api</artifactId>
		<version>${slf4j.version}</version>
		<scope>provided</scope>
	</dependency>
  	<dependency>
		<groupId>org.slf4j</groupId>
		<artifactId>slf4j-simple</artifactId>
		<version>${slf4j.version}</version>
		<scope>provided</scope>
	</dependency>
  </dependencies>
</project>
