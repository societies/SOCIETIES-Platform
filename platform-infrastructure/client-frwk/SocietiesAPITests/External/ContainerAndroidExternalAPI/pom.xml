<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.societies</groupId>
		<artifactId>android-parent</artifactId>
		<version>RELEASE</version>
	</parent>

	<groupId>org.societies.android.api.external.container</groupId>
	<artifactId>ContainerAndroidExternalAPI</artifactId>
	<name>APIExternalContainer</name>
	<version>${release.version}</version>
	<packaging>apk</packaging>

	<developers>
		<developer>
			<name>WP4 Client Framework Team</name>
			<!-- Name of component author -->
			<email>http://www.ict-societies.eu</email>
			<!-- Component author e-mail -->
		</developer>
	</developers>


	<dependencies>
		<dependency>
			<groupId>com.google.android</groupId>
			<artifactId>android</artifactId>
			<exclusions>
				<!-- Provided by Android -->
				<exclusion>
					<artifactId>xpp3</artifactId>
					<groupId>xpp3</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.societies.android.api.external</groupId>
			<artifactId>societies-android-api</artifactId>
			<version>${release.version}</version>
			<type>apklib</type>
		</dependency>
		<dependency>
			<groupId>org.societies.api.schema</groupId>
			<artifactId>societies-api-schema</artifactId>
			<version>${release.version}</version>
		</dependency>
		<!--dependency> <groupId>org.societies.android.api.external</groupId> <artifactId>societies-android-api</artifactId> 
			<version>${release.version}</version> </dependency -->

		<!--dependency> <groupId>org.societies.api.schema</groupId> <artifactId>societies-api-schema</artifactId> 
			<version>${release.version}</version> </dependency -->
		<dependency>
			<groupId>org.societies.utilities</groupId>
			<artifactId>DBC</artifactId>
			<version>${release.version}</version>
			<scope>compile</scope>
		</dependency>
		<!-- <dependency> <groupId>org.societies.android.platform.androidutils</groupId> 
			<artifactId>SocietiesAndroidUtilities</artifactId> <version>${release.version}</version> 
			<type>apklib</type> <exclusions> <exclusion> <groupId>org.societies.android.api.external</groupId> 
			<artifactId>societies-android-api</artifactId> </exclusion> </exclusions> 
			</dependency> -->

	</dependencies>

	<build>
		<finalName>${project.artifactId}</finalName>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
				<groupId>com.jayway.maven.plugins.android.generation2</groupId>
				<artifactId>android-maven-plugin</artifactId>

				<configuration>
					<emulator>
						<avd>Nexus403</avd>
						<wait>60000</wait>
						<options>-no-skin</options>
					</emulator>
					<!-- emma start -->
					<emmaEnable>true</emmaEnable>
					<emmaClassFolders>${project.basedir}/target/classes</emmaClassFolders>
					<emmaOutputMetaFile>${project.basedir}/target/emma/coverage.em</emmaOutputMetaFile>
					<!-- emma stop -->
					<dex>
						<noLocals>true</noLocals>
						<!-- must be set for emma -->
					</dex>
				</configuration>
				<executions>
					<!--execution> <id>startEmulator</id> <phase>initialize</phase> <goals> 
						<goal>emulator-start</goal> </goals> </execution -->
				</executions>

				<extensions>true</extensions>
			</plugin>
		</plugins>

	</build>
</project>
