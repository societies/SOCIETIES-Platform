<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
    xmlns="http://www.springframework.org/schema/beans" >

    <!--
       regular spring configuration file defining the beans for this
       bundle. We've kept the osgi definitions in a separate 
       configuration file so that this file can easily be used
       for integration testing outside of an OSGi environment
    -->

    <bean id="iSocialData" 
    	  class="org.societies.platform.socialdata.SocialData"
    	  init-method="initSocialData">
    
   		 <property name="internalCtxBroker" ref="internalCtxBroker"/>
		 <property name="commsMgr" 			ref="commsMgr"/>
           
    </bean>
    
    
    <bean id="SocialDataCommsManager" 
  		class="org.societies.platform.socialdata.SocialDataServer"
  		depends-on="commsMgr" 
  		init-method="InitService">
  		<property name="commManager" ref="commsMgr"/>
  		<property name="socialData" ref="iSocialData"/>
  </bean>

</beans>
