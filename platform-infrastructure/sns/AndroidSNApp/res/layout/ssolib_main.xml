<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/social_main_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bordered_orange"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dip"
            android:gravity="center_horizontal"
            android:text="@string/sns_title"
            android:textColor="@color/white"
            android:textSize="30px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:gravity="center_horizontal"
            android:text="@string/sn_descr"
            android:textColor="@color/white"
            android:textSize="20px" />

        <LinearLayout
            android:id="@+id/social_icon_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/lk_connector"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:background="@drawable/linkedin_connector" />

            <Button
                android:id="@+id/fb_connector"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:background="@drawable/facebook_connector" >
            </Button>

            <Button
                android:id="@+id/fq_connector"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:background="@drawable/foursquare_connector" >
            </Button>
            <!-- <Button android:text="SignOn (tramite Virgilio)" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginLeft="30dip" android:layout_marginRight="30dip" android:id="@+id/buttonSignOnVirgilio"></Button> -->

            <Button
                android:id="@+id/tw_connector"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:background="@drawable/twitter_connector" >
            </Button>
        </LinearLayout>
    </LinearLayout>

    <!-- <LinearLayout
        android:id="@+id/social_web_layout"
