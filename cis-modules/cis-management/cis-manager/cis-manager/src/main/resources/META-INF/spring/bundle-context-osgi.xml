	<osgi:reference id="eventMgmtRef" interface="org.societies.api.osgi.event.IEventMgr" />
	<osgi:reference id="internalCtxBroker" interface="org.societies.api.internal.context.broker.ICtxBroker" />
	<osgi:reference id="PrivacyPolicyManager" interface="org.societies.api.internal.privacytrust.privacyprotection.IPrivacyPolicyManager" />
	<osgi:reference id="PrivacyDataManager" interface="org.societies.api.internal.privacytrust.privacyprotection.IPrivacyDataManager" />
	<osgi:reference id="NegotiationRequester" interface="org.societies.api.internal.security.policynegotiator.INegotiation" />
	<osgi:reference id="userFeedback" interface="org.societies.api.internal.useragent.feedback.IUserFeedback" />
    <osgi:reference id="activityFeedManager" interface="org.societies.api.activity.IActivityFeedManager" />
    <osgi:reference id="cssDirectoryRemote" interface="org.societies.api.css.directory.ICssDirectoryRemote" />
</beans>
